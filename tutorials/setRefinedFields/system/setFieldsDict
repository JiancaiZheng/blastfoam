FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (test0);

defaultFieldValues
(
    volScalarFieldValue     test0 0
    volScalarFieldFunction  test1
    {
        type coded;
        sine
        {
            type        sine;
            amplitude   1.0;
            frequency   2.0;
            level       0.0;
        }
        code
        #{
            return Func1(sine).value(y);
        #};
    }
    volScalarFieldFunction  test2
    {
        type coded;

        polynomial
        {
            type polynomial;
            coeffs ((1 1) (2 1));
        }

        code
        #{
            Func1(polynomial, f);
            return f.value(y)*f.value(x);
        #};
    }
);


regions
(
    cylinderToCell // Use cylinder for 3D
    {
        p1 (0.5 0.5 0);
        p2 (0.5 0.5 1);
        radius 0.05;
        backup
        {
            p1 (0.5 0.5 0);
            p2 (0.5 0.5 1);
            radius 0.2;
        }
        refineInternal yes;
        level 3;

        fieldValues
        (
            volScalarFieldValue test0   1
        );
    }
);


