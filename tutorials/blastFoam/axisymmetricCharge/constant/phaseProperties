            mu              0;              // Viscosity
            Pr              1;              // Prandtl number
        }
        thermodynamics
        {
            Cv              1000;           // Heat capacity
            Hf              0.0;
        }
    }
    products
    {
        thermoType
        {
            transport   const;
            thermo      eConst;
            equationOfState JWL;
        }
        equationOfState
        {
            rho0      1601;
            A         609.77e9;
            B         12.95e9;
            R1        4.50;
            R2        1.4;
            omega     0.25;
        }
        specie
        {
            molWeight       55.0;
        }
        transport
        {
            mu              0;              // Viscosity
            Pr              1;              // Prandtl number
        }
        thermodynamics
        {
            Cv              850;           // Heat capacity
            Hf              0.0;
        }
    }

    activationModel linear;
    initiation
    {
        E0              9.0e9;

        points     ((0 0 0));     // Detonation points
        vDet       7850;            // Detonation velocity [m/s]
    }

    residualRho     1e-6;           // Minimum density of the phase
    residualAlpha   1e-10;          // Minimum volume fraction used for division
}

