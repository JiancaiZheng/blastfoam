FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 5;

defaultFieldValues
(
    volScalarFieldValue alpha.c4 0
);


regions
(
    sphericalMassToCell // Use cylinder for 3D
    {
        rho 1601;
        mass 25;
        centre (0 0 1.0);

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }
);


