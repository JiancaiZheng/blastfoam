FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fields (alpha.c4);
nBufferLayers 2;
balance no;

defaultFieldValues
(
    volScalarFieldValue alpha.c4 0
);


regions
(
    sphericalMassToCell // Use cylinder for 3D
    {
        centre (0 0 0.5);
        p1 (0 0 0.25);
        p2 (0 0 0.75);
        radius 0.1;
        mass 10;
        rho 1601;
        backup
        {
            centre (0 0 0.5);
            p1 (0 0 0.0);
            p2 (0 0 1.0);
            radius 0.75;
        }
        refineInternal yes;
        level 3;

        fieldValues
        (
            volScalarFieldValue alpha.c4    1
        );
    }

    // patchToFace // Refine walls
    // {
    //     name wall;
    //     level 3;
    //     refineFaces yes;
    // }
);


