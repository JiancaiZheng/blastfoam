FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      D;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/properties"

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    plate_to_air
    {
        type            KBSolidTraction;
        pRef            uniform 101298;
        traction        uniform (0 0 0);
        pressure        uniform 0;
        value           uniform (0 0 0);

        KBSolver        CONWEP;
        burstType       free;
        centre          (0 $R 0);
        mass            $W;
    }
    plateEnd
    {
        type            fixedDisplacement;
        value           uniform (0 0 0);
    }
    plateFree
    {
        type            solidTractionFree;
        pressure        uniform 0;
        value           uniform (0 0 0);
    }
    wedge
    {
        type            solidWedge;
        patchType       wedge;
        value           $internalField;
    }

    symmetry
    {
        type            symmetry;
        patchType       symmetry;
        value           $internalField;
    }
}

