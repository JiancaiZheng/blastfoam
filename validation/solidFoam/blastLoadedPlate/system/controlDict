FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "$FOAM_CASE/properties";

application     solidFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         $endTime;

deltaT          2e-7;

writeControl    adjustableRunTime;

runTimeModifiable yes;

writeInterval   2e-5;

purgeWrite      0;

writeFormat     ascii;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

maxCo 0.5;

adjustTimeStep yes;

maxDeltaT       2e-7;

libs ("libblastFoamControlled.so");

functions
{
    plateProbes
    {
        type blastProbes;
        adjustLocations yes;
        patchName "plate_to_air";

        probeLocations ((0 0 0));
        fields (U D);
    }
}
