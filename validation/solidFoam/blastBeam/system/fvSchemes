FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes
{
    default                 Euler;
}

ddtSchemes
{
    default                 Euler;
}

gradSchemes
{
    default                 extendedLeastSquares 0;
}

divSchemes
{
    default                 none;
    div(sigma)              Gauss skewCorrected linear;
    div(threeKalphaDeltaT)  Gauss skewCorrected linear;
    div((impK*grad(D)))     Gauss skewCorrected linear;
    div((impK*grad(DD)))    Gauss skewCorrected linear;
}

laplacianSchemes
{
    default                 none;
    laplacian(DD,D)         Gauss linear corrected;
    laplacian(DU,U)         Gauss linear corrected;
    laplacian(DDD,DD)       Gauss linear corrected;
    laplacian(kappa,T)      Gauss linear corrected;
}

snGradSchemes
{
    default                 none;
    snGrad(D)               corrected;
    snGrad(U)               corrected;
}

interpolationSchemes
{
    default                 linear;
}


