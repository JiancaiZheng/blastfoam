#include "properties"

x0  0;
w   #calc "$D / 8.0";
x1  #calc "$D / 2.0";
x2  $OR;

y0  0;
y1  $thickness;
y2  #calc "$OR + $x1";

xR   #calc "$x1 * cos(Foam::constant::mathematical::pi / 4.0)";
xRm  #calc "$x1 * cos(Foam::constant::mathematical::pi / 8.0)";
xRp  #calc "$x1 * cos(Foam::constant::mathematical::pi * 3.0 / 8.0)";

vertices
(
    ($x0  $y0  $x0)         // 0
    ($w   $y0  $x0)         // 1
    ($x1  $y0  $x0)         // 2

    ($x0  $y0  $w)          // 3
    ($w   $y0  $w)          // 4
    ($xR  $y0  $xR)         // 5

    ($x0  $y0  $x1)         // 6

    ($x0  $y1  $x0)         // 7
    ($w   $y1  $x0)         // 8
    ($x1  $y1  $x0)         // 9
    ($x2  $y1  $x0)         // 10

    ($x0  $y1  $w)          // 11
    ($w   $y1  $w)          // 12
    ($xR  $y1  $xR)         // 13
    ($x2  $y1  $xR)         // 14

    ($x0  $y1  $x1)         // 15

    ($x0  $y1  $x2)         // 16
    ($xR  $y1  $x2)         // 17
    ($x2  $y1  $x2)         // 18

    ($x0  $y2  $x0)         // 19
    ($w   $y2  $x0)         // 20
    ($x1  $y2  $x0)         // 21
    ($x2  $y2  $x0)         // 22

    ($x0  $y2  $w)          // 23
    ($w   $y2  $w)          // 24
    ($xR  $y2  $xR)         // 25
    ($x2  $y2  $xR)         // 26

    ($x0  $y2  $x1)         // 27

    ($x0  $y2  $x2)         // 28
    ($xR  $y2  $x2)         // 29
    ($x2  $y2  $x2)         // 30
);

dx          0.05;

nw          #calc "ceil( $xR / $dx )";
nr          #calc "ceil( ($x1 - $w) / $dx )";
nx          #calc "ceil( ($x2 - $xR) / $dx )";
ny          #calc "ceil( $y2 / $dx )";

dxPlate     0.01;
dyPlate     0.0025;

nwPlate     #calc "ceil( $w / $dxPlate )";
nrPlate     #calc "ceil( ($x1 - $w) / $dxPlate )";
nyPlate     #calc "ceil( $thickness / $dyPlate )";

