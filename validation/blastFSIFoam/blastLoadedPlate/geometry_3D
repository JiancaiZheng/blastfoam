#include "properties"

x0  0;
x1  #calc "$D  / 2.0";
x2  $OR;

y0  0;
y1  $thickness;
y2  #calc "$OR + $D / 2.0";

vertices
(
    ($x0  $y0  $x0)         // 0
    ($x1  $y0  $x0)         // 1
    ($x0  $y1  $x0)         // 2
    ($x1  $y1  $x0)         // 3
    ($x2  $y1  $x0)         // 4
    ($x0  $y2  $x0)         // 5
    ($x1  $y2  $x0)         // 6
    ($x2  $y2  $x0)         // 7

    ($x0  $y0  $x1)         // 8
    ($x1  $y0  $x1)         // 9
    ($x0  $y1  $x1)         // 10
    ($x1  $y1  $x1)         // 11
    ($x2  $y1  $x1)         // 12
    ($x0  $y2  $x1)         // 13
    ($x1  $y2  $x1)         // 14
    ($x2  $y2  $x1)         // 15

    ($x0  $y1  $x2)         // 16
    ($x1  $y1  $x2)         // 17
    ($x2  $y1  $x2)         // 18
    ($x0  $y2  $x2)         // 19
    ($x1  $y2  $x2)         // 20
    ($x2  $y2  $x2)         // 21
);

dx          0.05;

nx0         #calc "ceil( $D / 2.0 / $dx )";
nx1         #calc "ceil( ($OR - $D / 2.0) / $dx )";
ny          #calc "ceil( $OR / $dx )";

dxPlate     0.0125;
dyPlate     0.001;

nxPlate     #calc "ceil( $D / 2.0 / $dxPlate )";
nyPlate     #calc "ceil( $thickness / $dyPlate )";

