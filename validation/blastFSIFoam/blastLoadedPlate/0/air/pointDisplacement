FoamFile
{
    version     2.0;
    format      ascii;
    class       pointVectorField;
    object      pointDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    outlet
    {
        type            slip;
    }

    ground
    {
        type            slip;
    }

    air_to_plate
    {
        type            globalMapped;
        nbrName         pointD;
    }

    wedge
    {
        type            wedge;
    }

    symmetry
    {
        type            symmetry;
    }
}

