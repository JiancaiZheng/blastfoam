FoamFile
{
    format      ascii;
    class       dictionary;
    location    "system";
    object      "fvSchemes";
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fluxScheme      HLLC;

ddtSchemes
{
    default         Euler;
    timeIntegrator  RK3SSP 4;
}

gradSchemes
{
    default         cellMDLimited leastSquares 1.0;
}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

order quadraticMUSCL;
interpolationSchemes
{
    default             linear;

    reconstruct(rho)    $order Minmod;
    reconstruct(U)      $order Minmod;
    reconstruct(e)      $order Minmod;
    reconstruct(p)      $order Minmod;
    reconstruct(speedOfSound) $order Minmod;
}

snGradSchemes
{
    default         corrected;
}


