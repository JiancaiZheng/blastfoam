FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh   adaptiveFvMesh;
errorEstimator  multicomponent;
errorEstimators
(
    density
    {
        errorEstimator      densityGradient;
        lowerRefineLevel    1e-2;
        unrefineLevel       1e-2;
        maxRefinement       2;
    }
    volumeFraction
    {
        errorEstimator      fieldValue;
        fieldName           alpha.air;
        lowerRefineLevel    1e-2;
        upperRefineLevel    0.99;
        unrefineLevel       1e-2;
        upperUnrefineLevel  0.99;
        maxRefinement       2;
    }
);

// How often to refine
refineInterval  2;



// Have slower than 2:1 refinement
nBufferLayers   1;

// Refine cells only up to maxRefinement levels


// Write the refinement level as a volScalarField
dumpLevel       true;
