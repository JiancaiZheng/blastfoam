FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
convertToMeters 10;

nx -2;
x   2;

ny -1;
y   1;

nz -0.01;
z   0.01;

vertices
(
    ($nx $ny $nz)
    ($x  $ny $nz)
    ($x  $y  $nz)
    ($nx $y  $nz)

    ($nx $ny $z )
    ($x  $ny $z )
    ($x  $y  $z )
    ($nx $y  $z )

);

blocks
(
    hex (0 1 2 3 4 5 6 7) (200 100 1) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    inlet
    {
        type wall;
        faces
        (
            (0 1 5 4)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (0 3 7 4)
            (1 2 6 5)
            (2 3 7 6)
        );
    }
);

mergePatchPairs
(
);
